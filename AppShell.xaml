<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SkiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SkiApp"
    xmlns:Views="clr-namespace:SkiApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SkiApp">

    <TabBar>

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate Views:Homepage}"
        Route="Homepage" />
        <ShellContent
        Title="Tips"
        ContentTemplate="{DataTemplate Views:Tips}"
        Route="Tips" />
        <ShellContent
    Title="Resorts"
    ContentTemplate="{DataTemplate Views:Resorts}"
    Route="Resorts" />
        <ShellContent
Title="Coaches"
ContentTemplate="{DataTemplate Views:Coaches}"
Route="Coaches" />
        <ShellContent
Title="Profile"
ContentTemplate="{DataTemplate Views:Profile}"
Route="Profile" />


    </TabBar>
    <MenuItem Text="Logout" Command="{Binding LogoutCommand}" />


</Shell>
