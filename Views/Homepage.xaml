<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkiApp.Views.Homepage"
             Title="Homepage">
    <VerticalStackLayout>
        <Label 
            Text="Ski Guide"
            FontSize="70"
            FontFamily="Snow"
            TextColor="RoyalBlue"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image 
            Source="snowflake.png"
            WidthRequest="700"                   />

        <Button
          FontFamily="SuperOceanPersonalUse"
          Text="Log In"
       Command="{Binding OnLoginCommand}"               />

    </VerticalStackLayout>
</ContentPage>