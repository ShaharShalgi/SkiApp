<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkiApp.Views.Profile"
             Title="Profile"
              xmlns:ViewModels="clr-namespace:SkiApp.ViewModels"
             BackgroundColor="#f5f5f5"
              x:DataType="ViewModels:ProfileViewModel">
    <ScrollView>
        <VerticalStackLayout>
            <Image Source="snowbanner.jpg"/>
            <Grid RowSpacing="20" 
              Padding="20"
              VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            

            <Frame Grid.Row="0"
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   CornerRadius="15"
                   Margin="0,10"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="20">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Email"
                               FontSize="14"
                               TextColor="#666666"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Email}"
                               FontSize="16"
                               TextColor="#333333"/>
                        <BoxView HeightRequest="1"
                                BackgroundColor="#e0e0e0"
                                Margin="0,5,0,0"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Username"
                               FontSize="14"
                               TextColor="#666666"
                               FontAttributes="Bold"/>
                            <Label Text="{Binding Username}"
                               FontSize="16"
                               TextColor="#333333"/>
                        <BoxView HeightRequest="1"
                                BackgroundColor="#e0e0e0"
                                Margin="0,5,0,0"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Gender"
                               FontSize="14"
                               TextColor="#666666"
                               FontAttributes="Bold"/>
                            <Label Text="{Binding Gender}"
                               FontSize="16"
                               TextColor="#333333"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <VerticalStackLayout Grid.Row="1" 
                                Spacing="15">
                <Button Text="Change Information"
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="White"
                        BackgroundColor="#007AFF"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,10,0,0"
                        Command="{Binding UpdateRequestCommand}"/>

                <Button Text="Upgrade to Professional"
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="#1a1a1a"
                        BackgroundColor="Goldenrod"
                        CornerRadius="10"
                        HeightRequest="50"/>
                    <VerticalStackLayout
                             x:Name="ProfessionalFields"
                             IsVisible="{Binding UpdateRequest}"
                             Spacing="15"
                             IsEnabled="{Binding NotInServerCall}">
                        <Entry x:Name="LocEntry" Placeholder="Name" Text="{Binding Username}" />

                        <Entry x:Name="PriceEntry" Placeholder="Password" Text="{Binding Password}"  IsPassword="True"/>
                        <Entry x:Name="TextEntry" Placeholder="Email" Text="{Binding Email}" />




                        <Picker x:Name="TypePicker" Title="Gender" SelectedItem="{Binding Gender}">
                            <Picker.Items>
                                <x:String>Male</x:String>
                                <x:String>Female</x:String>
                                <x:String>Other</x:String>

                            </Picker.Items>
                        </Picker>
                        <Button Text="Save"
                                FontAttributes="Bold"
                                FontSize="16"
                                TextColor="White"
                                BackgroundColor="#007AFF"
                                CornerRadius="10"
                                HeightRequest="50"
                                Margin="0,10,0,0"
                                 Command="{Binding SaveCommand}"/>
                        <Grid ColumnDefinitions="1*" RowDefinitions="1*, 1*, 1*, 1*">
                            <Label
          Grid.Row="1"
          FontSize="20"
          HorizontalTextAlignment="Center"
          IsVisible="{Binding ShowNameError}"
          Text="{Binding NameError}"
          TextColor="MediumVioletRed" />
                            <Label
          Grid.Row="2"
          FontSize="20"
          HorizontalTextAlignment="Center"
          IsVisible="{Binding ShowPasswordError}"
          Text="{Binding PasswordError}"
          TextColor="MediumVioletRed" />
                            <Label
          Grid.Row="4"
          FontSize="20"
          HorizontalTextAlignment="Center"
          IsVisible="{Binding ShowEmailError}"
          Text="{Binding EmailError}"
          TextColor="MediumVioletRed" />
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
        </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>