<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SkiApp.Views.Tips"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:SkiApp.Models"
    xmlns:viewModels="clr-namespace:SkiApp.ViewModels"
    Title="Tips"
    x:DataType="viewModels:TipsViewModel">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!--  Header Section  -->
            <Frame
                Padding="15"
                BackgroundColor="#f0f9ff"
                BorderColor="#93c5fd"
                CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="32"
                        HorizontalOptions="Center"
                        Text="Learn to Ski"
                        TextColor="#1e40af" />

                    <Label
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text="Master the slopes with our comprehensive lessons"
                        TextColor="#64748b" />
                </VerticalStackLayout>
            </Frame>

            <!--  Difficulty Picker  -->
            <Frame
                Padding="15"
                BackgroundColor="White"
                BorderColor="#e2e8f0"
                CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Select Difficulty Level"
                        TextColor="#334155" />

                    <Picker
                        x:Name="DifficultyPicker"
                        Title="Choose your skill level"
                        BackgroundColor="#f8fafc"
                        SelectedIndex="{Binding Diff}">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Beginner - First Time on Slopes</x:String>
                                <x:String>Intermediate - Comfortable on Blue Runs</x:String>
                                <x:String>Advanced - Black Diamond Ready</x:String>
                                <x:String>Expert - Double Black Diamond</x:String>
                                <x:String>All</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                    <Button Command="{Binding SortTipsCommand}" Text="Sort" />
                </VerticalStackLayout>
            </Frame>

            <!--  Video Sections  -->
            <Frame
                Padding="15"
                BackgroundColor="White"
                BorderColor="#e2e8f0"
                CornerRadius="8">
                <VerticalStackLayout Spacing="15">
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="Today's Lesson Videos"
                        TextColor="#334155" />

                    <!--  Video Placeholder 1  -->
