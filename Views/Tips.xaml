                    <CollectionView
                        x:Name="TipList"
                        HeightRequest="300"
                        ItemsSource="{Binding TipCol}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TipInfo">
                                <Frame BackgroundColor="White" 
                                        BorderColor="#e2e8f0" 
                                        CornerRadius="12" 
                                        Padding="15"
                                     HasShadow="True">
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                      
                                        <!--<Label Grid.Column="0" Text="{Binding Title}" />-->
                                        <Frame BackgroundColor="#f1f5f9" BorderColor="#cbd5e1" CornerRadius="6" Grid.Column="0">
                                      <VerticalStackLayout Spacing="10">
                                         <Label Text="{Binding Title}"
                                                FontSize="16"
                                                FontAttributes="Bold"/>
                                           <WebView x:Name="Video1WebView"
                                                    HeightRequest="200"
                                                    Source="{Binding VideoLink}"/>
                                        </VerticalStackLayout>
                                          </Frame>
                                        
                                        <Label Grid.Row="0" Text="{Binding Topic}" FontFamily="Aharoni" FontSize="16"/>
                                        <Label Grid.Row="1" Text="{Binding Difficulty}" FontFamily="Aharoni" FontSize="16"/>
                                        <Label Grid.Row="2" Text="{Binding Info}" FontFamily="Aharoni" FontSize="16"/>
                                        </Grid>
                                   
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
